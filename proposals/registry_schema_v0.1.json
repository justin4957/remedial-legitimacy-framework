{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://remedial-legitimacy-framework.org/schemas/grievance-registry/v0.1",
  "title": "Distributed Grievance Registry Entry",
  "description": "Standard format for documenting institutional failures and rights violations",
  "type": "object",
  "required": [
    "entry_id",
    "protocol_version",
    "submission_date",
    "last_modified",
    "incident_date",
    "incident_type",
    "institution_name",
    "institution_type",
    "jurisdiction",
    "summary",
    "description",
    "harm_alleged",
    "verification_level"
  ],
  "properties": {
    "entry_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this grievance entry"
    },
    "protocol_version": {
      "type": "string",
      "const": "0.1",
      "description": "Version of the grievance registry protocol"
    },
    "submission_date": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when entry was submitted"
    },
    "last_modified": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last modification"
    },
    "incident_date": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 date or timestamp when incident occurred"
    },
    "incident_date_start": {
      "type": "string",
      "format": "date-time",
      "description": "Start date for incidents spanning a time period"
    },
    "incident_date_end": {
      "type": "string",
      "format": "date-time",
      "description": "End date for incidents spanning a time period"
    },
    "incident_type": {
      "type": "string",
      "enum": [
        "first_amendment_violation",
        "fourth_amendment_violation",
        "fifth_amendment_violation",
        "sixth_amendment_violation",
        "eighth_amendment_violation",
        "fourteenth_amendment_violation",
        "other_constitutional_violation",
        "excessive_delay",
        "denial_of_access",
        "procedural_violation",
        "lack_of_transparency",
        "failure_to_respond",
        "race_discrimination",
        "gender_discrimination",
        "religious_discrimination",
        "disability_discrimination",
        "age_discrimination",
        "sexual_orientation_discrimination",
        "other_protected_class_discrimination",
        "abuse_of_authority",
        "corruption",
        "retaliation",
        "intimidation_harassment",
        "destruction_of_evidence",
        "false_statements",
        "failure_to_protect",
        "inadequate_resources",
        "incompetence",
        "policy_failure",
        "systemic_breakdown"
      ],
      "description": "Category of grievance from standard taxonomy"
    },
    "institution_name": {
      "type": "string",
      "description": "Name of the institution involved"
    },
    "institution_type": {
      "type": "string",
      "enum": [
        "law_enforcement",
        "judicial",
        "prosecutorial",
        "administrative",
        "legislative",
        "executive",
        "educational",
        "healthcare",
        "corporate",
        "financial",
        "housing",
        "other"
      ],
      "description": "Category of institution"
    },
    "jurisdiction": {
      "type": "string",
      "enum": [
        "federal",
        "state",
        "county",
        "municipal",
        "tribal",
        "international"
      ],
      "description": "Geographic jurisdiction level"
    },
    "jurisdiction_detail": {
      "type": "string",
      "description": "Specific jurisdiction (e.g., 'California', 'Cook County', 'Chicago')"
    },
    "latitude": {
      "type": "number",
      "minimum": -90,
      "maximum": 90,
      "description": "Geographic latitude"
    },
    "longitude": {
      "type": "number",
      "minimum": -180,
      "maximum": 180,
      "description": "Geographic longitude"
    },
    "summary": {
      "type": "string",
      "maxLength": 280,
      "description": "Brief summary (280 characters max, tweet-length)"
    },
    "description": {
      "type": "string",
      "description": "Detailed account of what occurred"
    },
    "harm_alleged": {
      "type": "string",
      "description": "Specific harm or rights violation alleged"
    },
    "verification_level": {
      "type": "string",
      "enum": [
        "self_reported",
        "corroborated",
        "documented",
        "adjudicated"
      ],
      "description": "Level of verification for this entry"
    },
    "evidence_type": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "eyewitness_testimony",
          "documentary_evidence",
          "photographic_evidence",
          "video_evidence",
          "audio_evidence",
          "official_records",
          "expert_analysis",
          "statistical_data",
          "correspondence",
          "other"
        ]
      },
      "description": "Categories of supporting evidence"
    },
    "prior_complaints": {
      "type": "boolean",
      "description": "Whether similar complaints were previously filed"
    },
    "institutional_response": {
      "type": "string",
      "description": "How institution responded (if at all)"
    },
    "remedy_sought": {
      "type": "string",
      "description": "What remedy or accountability is sought"
    },
    "related_incidents": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "description": "UUIDs of other registry entries showing pattern"
    },
    "legal_proceedings": {
      "type": "string",
      "description": "Any lawsuits, investigations, or formal processes initiated"
    },
    "contributor_id": {
      "type": "string",
      "description": "Pseudonymous identifier for contributor (optional, omit for anonymous)"
    },
    "contributor_type": {
      "type": "string",
      "enum": [
        "direct_witness",
        "affected_party",
        "third_party_reporter",
        "advocate",
        "researcher"
      ],
      "description": "Relationship of contributor to incident"
    },
    "contact_method": {
      "type": "string",
      "description": "Encrypted contact info (if contributor wishes to be reachable)"
    },
    "evidence_links": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "description": "URLs or hashes of supporting documents"
    },
    "evidence_description": {
      "type": "string",
      "description": "Description of evidence available"
    },
    "chain_of_custody": {
      "type": "string",
      "description": "Preservation method (NIST-compliant, SHA-256 hashed, etc.)"
    },
    "persons_affected": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of people affected (if known)"
    },
    "ongoing": {
      "type": "boolean",
      "description": "Whether institutional failure is ongoing or resolved"
    },
    "remedy_status": {
      "type": "string",
      "enum": [
        "unresolved",
        "partially_resolved",
        "fully_resolved",
        "no_remedy_sought"
      ],
      "description": "Current status of remedy or resolution"
    },
    "outcome_description": {
      "type": "string",
      "description": "What happened subsequently"
    },
    "redaction_applied": {
      "type": "boolean",
      "description": "Whether sensitive information was redacted"
    },
    "redaction_reason": {
      "type": "string",
      "enum": [
        "privacy",
        "safety",
        "ongoing_legal_proceeding",
        "other"
      ],
      "description": "Reason for redaction"
    },
    "redacted_fields": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of which fields were redacted"
    },
    "content_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 hash of entry content"
    },
    "signature": {
      "type": "string",
      "description": "Optional cryptographic signature"
    },
    "preservation_method": {
      "type": "string",
      "description": "Description of how entry is preserved"
    }
  }
}
